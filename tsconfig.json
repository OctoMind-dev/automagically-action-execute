{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": ["esnext"]
  },
  "include": [
    "src",
    "tests",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
